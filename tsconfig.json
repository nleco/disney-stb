{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */

    "target": "ES2016",
    "module": "CommonJS",
    "baseUrl": "./src",
    "paths": {
      "@constants/*": ["constants/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"]
    },
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
